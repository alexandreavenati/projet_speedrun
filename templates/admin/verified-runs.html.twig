{% extends 'admin/base.html.twig' %}

{% block metatitle %}Speedruns V√©rifi√©s - Admin{% endblock metatitle %}

{% block main %}
<section class="admin-main-div">
    <h1>Liste des Speedruns V√©rifi√©s</h1>

    {% if posts is not empty %}
        <table class="admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Joueur</th>
                    <th>Activit√©</th>
                    <th>Temps</th>
                    <th>Publi√© le</th>
                    <th>Plateforme</th>
                    <th>Expansion</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    {% if post.verified %}
                        <tr class="clickable-row" data-href="{{ path('show-speedrun', {'id': post.id}) }}">
                            <td>{{ post.id }}</td>
                            <td>
                                <a href="{{ path('detail-user', {'id': post.user.id}) }}">{{ post.user.username }}</a>
                            </td>
                            <td>{{ post.activity.name }}</td>
                            <td>{{ post.videoDuration | date('H:i:s') }}</td>
                            <td>{{ post.publicationDate | date('d/m/Y') }}</td>
                            <td>{{ post.platform }}</td>
                            <td>{{ post.expansion }}</td>
                            <td>
                                <a href="{{ path('admin-edit-speedrun', {'id': post.id}) }}" class="btn btn-edit">‚úèÔ∏è Modifier</a>
                                <a href="{{ path('admin-delete-speedrun', {'id': post.id}) }}" class="btn btn-delete">üóëÔ∏è Supprimer</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun speedrun v√©rifi√© pour le moment.</p>
    {% endif %}
</section>
{% endblock main %}

{% block script %}
    <script src="{{ asset('assets/js/clickable-rows.js') }}"></script>
{% endblock script %}
